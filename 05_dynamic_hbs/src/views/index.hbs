<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FORM</title>
    {{! <link rel="stylesheet" href="css/style.css" /> }}
    <style>
      .form { width: 50%; margin: 50px auto; border: 1px solid black;
      background-color: rgb(144, 200, 249); padding: 50px; border-radius: 40px
      0px; } .form div { padding: 10px; } input { border: none; padding: 5px;
      border-radius: 10px; margin: 10px; } input::after { border: none; } .btn {
      display: flex; align-items: center; justify-content: center; } button {
      border: 1px solid black; border-radius: 10px; padding: 5px; } button:hover
      { border: 1px solid brown; border-radius: 10px; color: brown; }

    </style>
  </head>
  <body>
    <div class="form">
      <h1>My name is {{myName}}</h1>
      <form action="">
        <div class="name">
          <label for="fname">First Name</label>
          <input
            type="text"
            id="fname"
            name="fname"
            placeholder="Enter first name"
          />
          <label for="lname">Last Name</label>
          <input
            type="text"
            name="lname"
            id="lname"
            placeholder="Enter last name"
          />
        </div>
        <div class="email">
          <label for="email">Email address</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Enter email address"
          />
        </div>
        <div class="phone">
          <label for="phone">Phone Number</label>
          <input
            type="tel"
            name="phone"
            id="phone"
            placeholder="Enter phone number"
          />
        </div>
        <div class="pass1">
          <label for="pass1">Enter Password</label>
          <input
            type="password"
            name="pass1"
            id="pass1"
            placeholder="Enter password"
          />
        </div>
        <div class="pass2">
          <label for="pass2">Confirm Password</label>
          <input
            type="password"
            name="pass2"
            id="pass2"
            placeholder="Confirm password"
          />
        </div>
        <div class="btn">
          <button onclick="submitAction()">Submit</button>
        </div>
      </form>
    </div>
    <script>
      const submitAction = () => { alert("Data Submitted"); };
    </script>
  </body>
</html>